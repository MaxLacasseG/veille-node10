<% include partials/head %>

    <body>
        <div id="conteneurPrinc">

            <% include partials/nav %>

                <main>
                    <section id="principale" class="listeMembre">
                        <table>
                            <thead>
                                <tr>
                                    <td>Les membres</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Prénom</th>
                                    <th>Nom</th>
                                    <th>Téléphone</th>
                                    <th>Courriel</th>
                                    <th></th>
                                    <th><a href="/ajouter"><i class="fas fa-plus-circle fa-2x"></i></a></th>
                                </tr>
                                <% for(let elem of data){ %>
                                    <tr>
                                        <input type="hidden" class="id" value="<%= elem._id %>">
                                        <td class="prenom" contenteditable="true"><%= elem.prenom %></td>
                                        <td class="nom" contenteditable="true"><%= elem.nom %></td>
                                        <td class="tel" contenteditable="true"><%= elem.tel %></td>
                                        <td class="courriel" contenteditable="true"><%= elem.courriel %></td>
                                        <td class="btn-mod"><a href="/majMembre/"><i class="fas fa-save fa-2x"></i></a></td>
                                        <td class="btn-detr"><a href="/detruireMembre/<%= elem._id %>"><i class="fas fa-trash fa-2x"></i></a></td>
                                    </tr>
                                    <% }; %>
                            </tbody>
                        </table>
                    </section>
                </main>
                <% include partials/footer %>
        </div>
        <script src="js/listeMembres.js"></script>
    </body>

    </html>