<% include partials/head %>

    <body>
        <div id="conteneurPrinc">

            <% include partials/nav %>

                <main>
                    <section id="principale" class="listeMembre">
                        <table>
                            <thead>
                                <tr>
                                    <td>Les membres</td>
                                </tr>
                            </thead>
                            <form class="formulairePost" action="/modifier" method="POST">
                                <input type="text" name="id" id="formId">
                                <input type="text" name="prenom" id="formPrenom">
                                <input type="text" name="nom" id="formNom">
                                <input type="text" name="tel" id="formTel">
                                <input type="text" name="courriel" id="formCourriel">
                                <input type="submit">
                            </form>
                            <tbody>
                                <tr>
                                    <th><a href="/trier/prenom/asc">Prénom</a></th>
                                    <th><a href="/trier/nom/asc">Nom</a></th>
                                    <th><a href="/trier/tel/asc">Téléphone</a></th>
                                    <th><a href="/trier/courriel/asc">Courriel</a></th>
                                    <th></th>
                                    <th><a href="/ajouter"><i class="fas fa-plus-circle fa-2x"></i></a></th>
                                </tr>
                                <% for(let elem of data){ %>
                                    <tr>
                                        <input type="hidden" class="id" value="<%= elem._id %>">
                                        <td data-ordre ="<% if(typeof ordre == 'undefined'){ %> <%='asc'%> <%}else{%> <%= ordre%> <%}%>" class="prenom" contenteditable="true"><%= elem.prenom %></td>
                                        <td data-ordre ="<% if(typeof ordre == 'undefined'){ %> <%='asc'%> <%}else{%> <%= ordre%> <%}%>" class="nom" contenteditable="true"><%= elem.nom %></td>
                                        <td data-ordre ="<% if(typeof ordre == 'undefined'){ %> <%='asc'%> <%}else{%> <%= ordre%> <%}%>" class="tel" contenteditable="true"><%= elem.tel %></td>
                                        <td data-ordre ="<% if(typeof ordre == 'undefined'){ %> <%='asc'%> <%}else{%> <%= ordre%> <%}%>" class="courriel" contenteditable="true"><%= elem.courriel %></td>
                                        <td class="btn-mod"><a href="/majMembre/"><i class="fas fa-save fa-2x"></i></a></td>
                                        <td class="btn-detr"><a href="/detruireMembre/<%= elem._id %>"><i class="fas fa-trash fa-2x"></i></a></td>
                                    </tr>
                                    <% }; %>
                            </tbody>
                        </table>
                    </section>
                </main>
                <% include partials/footer %>
        </div>
        <script src="/js/listeMembres.js"></script>
    </body>

    </html>